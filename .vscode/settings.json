{
    // Important to disable for EditorConfig to apply correctly
    // See: https://github.com/editorconfig/editorconfig-vscode/issues/153
    "files.trimTrailingWhitespace": false,

    // Disable built-in formatter (using Prettier extension)
    "javascript.format.enable": false,

    // Disable built-in validator (using Flow extension)
    "javascript.validate.enable": false,

    // Automatically apply fixes on save (inc. Prettier)
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // Run Flow server in IDE lazy mode
    "flow.lazyMode": "ide",

    // Markdown table of contents generation
    "markdown.extension.toc.levels": "2..3",
    "markdown.extension.toc.githubCompatibility": true,

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
