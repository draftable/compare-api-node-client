{
    // Important to disable for EditorConfig to apply correctly
    // See: https://github.com/editorconfig/editorconfig-vscode/issues/153
    "files.trimTrailingWhitespace": false,

    // Disable built-in formatter (using Prettier extension)
    "javascript.format.enable": false,

    // Automatically apply fixes on save (inc. Prettier)
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // Markdown table of contents generation
    "markdown.extension.toc.levels": "2..3",
    "markdown.extension.toc.slugifyMode": "github",

    // Use local TypeScript package & types
    "typescript.tsdk": "node_modules/typescript/lib",

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    }
}
